{
  "name": "hot-press",
  "version": "3.0.0",
  "description": "Event lifecycle management",
  "main": "dist/hot-press.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "rimraf dist/**/__tests__",
    "clean": "rimraf dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/hot-press.git"
  },
  "keywords": [
    "event",
    "pubsub",
    "broker"
  ],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/hot-press/issues"
  },
  "homepage": "https://github.com/johngeorgewright/hot-press#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/ramda": "^0.27.6",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "ramda": "^0.27.0"
  }
}
